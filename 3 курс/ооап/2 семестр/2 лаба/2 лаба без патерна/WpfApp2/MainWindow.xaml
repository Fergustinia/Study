<Window x:Class="DocConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Конвертер документов" Height="250" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Word → PDF" Click="WordToPdf_Click" 
                    Margin="10" Width="120"/>
            <Button Content="PDF → Word" Click="PdfToWord_Click" 
                    Margin="10" Width="120"/>
            <TextBlock x:Name="StatusText" Margin="10" Text="Готово"/>
        </StackPanel>
    </Grid>
</Window>