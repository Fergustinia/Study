<Window x:Class="Lab8_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Лабораторная 8.3" Height="400" Width="600">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Введите вероятности (до 5):" FontWeight="Bold" />
            <StackPanel Orientation="Horizontal">
                <TextBox Width="50" Name="Prob1Box" Margin="5"/>
                <TextBox Width="50" Name="Prob2Box" Margin="5"/>
                <TextBox Width="50" Name="Prob3Box" Margin="5"/>
                <TextBox Width="50" Name="Prob4Box" Margin="5"/>
                <TextBox Width="50" Name="Prob5Box" Margin="5"/>
            </StackPanel>

            <TextBlock Text="Число испытаний (N):" FontWeight="Bold" Margin="5"/>
            <TextBox Width="100" Name="TrialsBox" Margin="5"/>

            <Button Content="Start" Click="Start_Click" Margin="5" Width="100" />

            <TextBlock Text="Результаты:" FontWeight="Bold" Margin="5"/>
            <ItemsControl Name="ResultsBox" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
